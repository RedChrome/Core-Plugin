<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <menu
               id="com.pex.ui.menu"
               label="PDT Extensions">
            <command
                  commandId="com.pex.ui.command.phpcsfixer"
                  icon="ico/full/obj16/cs-fixer.png"
                  label="Run PHP-CS-Fixer"
                  tooltip="Run PHP-CS-Fixer on files and folders">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            description="Run PHP-CS-Fixer on files and folders"
            id="com.pex.ui.command.phpcsfixer"
            name="Run PHP-CS-Fixer">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.pex.ui.handlers.RunPHPCSFixerHandler"
            commandId="com.pex.ui.command.phpcsfixer">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="com.pex.ui.preferences.PDTExtensionsPreferencePage"
            id="com.pex.ui.preferences.PEXPreferencePage"
            name="PDT Extensions">
      </page>
      <page
            category="com.pex.ui.preferences.PEXPreferencePage"
            class="com.pex.ui.preferences.csfixer.PHPCSFixerPreferencePage"
            id="com.pex.ui.preferences.PHPCSFixerPreferencePage"
            name="CS Fixer">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.propertyPages">
      <page
            class="com.pex.ui.preferences.PDTExtensionsPreferencePage"
            id="com.pex.ui.preferences.PEXPropertyPage"
            name="PDT Extensions">
 			<enabledWhen>
				<adapt type="org.eclipse.core.resources.IProject">
				</adapt>
			</enabledWhen>
			<filter name="nature" value="org.eclipse.php.core.PHPNature" />
      </page>
      <page
            category="com.pex.ui.preferences.PEXPropertyPage"
            class="com.pex.ui.preferences.csfixer.PHPCSFixerPreferencePage"
            id="com.pex.ui.propertyPages.PHPCSFixerPreferencePage"
            name="CS Fixer">
 			<enabledWhen>
				<adapt type="org.eclipse.core.resources.IProject">
				</adapt>
			</enabledWhen>
			<filter name="nature" value="org.eclipse.php.core.PHPNature" />
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="com.pex.ui.preferences.PEXPreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="com.pex.ui.command.phpcsfixer"
            contextId="org.eclipse.ui.textEditorScope"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+P">
      </key>
   </extension>

</plugin>
